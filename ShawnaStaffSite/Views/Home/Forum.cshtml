@model ForumPosts 
@{
    ViewData["TITLE"] = "Forum Page";
}

<div class="jumbotron">
    <h1 class="display-4 text-center head-link"><a class="nav-link" asp-area="" asp-controller="Home" asp-action="ForumPost">Community Forum</a></h1><br />
</div>

<div class="container">
    <form method="post">
        <div asp-validation-summary="All"></div>
        <div class="row">
            <label class="control-label col-sm-3 ml-5 pb-3" asp-for="PostTopic">Post Topic </label><br />
            <input class="form-control col-sm-6 pb-3" asp-for="PostTopic" placeholder="Topic" /><br />
        </div>
        <div class="row">
            <label class="control-label col-sm-3 ml-5 pb-3" asp-for="PostText">Comments</label><br />
            <input class="form-control col-sm-6 pb-3" asp-for="PostText" placeholder="Write comments..." /><br />
        </div>
