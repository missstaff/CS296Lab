@model List<ForumPosts>

@{
    ViewData["TITLE"] = "Forum Posts";
}

<form method="post" class="container">
    <div class="row p-2">
        <label for="PostTopic" class="control-label col-md-1">Post Topic</label>
        <input name="PostTopic" class="form-control col-md-6" />
    </div>
    <div>
        <button type="submit" class="form-control btm btn-success col-2 ml-5">Submit</button>
        <a asp-action="ForumPost" class="btn btn-secondary col-2 ml-5">Reset</a>
    </div>
</form>

<div>
    <h2>Discussion Forum</h2>
   @foreach (ForumPosts post in Model)
   {
    <p>
        Post Topic:
        @post.PostTopic;
        Post:
        @post.PostText;
        User Name:
        @post.Name.Name;
        Post Rating:
        @post.PostRating;
        Date:
        @post.Date;
    </p>
   }
</div>
